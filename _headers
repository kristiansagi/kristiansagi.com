    frame-ancestors 'none';

/*.html
  # HTML: ära cache'i (navigatsioon ja sisu värskus)
  Cache-Control: no-store, max-age=0

/assets/*
  # Teema/Hugo varad: agressiivne cache (failinimed on sõrmejäljega)
  Cache-Control: public, max-age=31536000, immutable

/static/*
  # Sinu staatilised pildid/CSS/JS: agressiivne cache
  Cache-Control: public, max-age=31536000, immutable

